<%# this is our form for adding or editing pens %>
<%= form_with(model: pen) do |f| %>
  <%# if something went wrong, show the errors %>
  <% if pen.errors.any? %>
    <div class="errors">
      <h2><%= pluralize(pen.errors.count, "error") %> found:</h2>
      <ul>
        <% pen.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%# all the fields we need for a pen %>
  <div class="form-group">
    <%= f.label :title, "Pen Name", class: "form-label" %>
    <%= f.text_field :title, class: "form-input", placeholder: "e.g., Pilot Metropolitan" %>
  </div>

  <div class="form-group">
    <%= f.label :description, "Tell us about it", class: "form-label" %>
    <%= f.text_area :description, class: "form-input", rows: 5, 
        placeholder: "What makes this pen special?" %>
  </div>

  <div class="form-group">
    <%= f.label :price, "How much?", class: "form-label" %>
    <%= f.number_field :price, class: "form-input", step: :any %>
  </div>

  <div class="form-group">
    <%= f.label :image, "Show it off", class: "form-label" %>
    <%= f.file_field :image, class: "form-input" %>
  </div>

  <%# submit button - let's save this pen! %>
  <%= f.submit class: "button button-primary" %>
<% end %>